{
    "name": "statix-php/sidecar-virus-scan",
    "description": "This is my package sidecar-virus-scan",
    "keywords": [
        "statix-php",
        "laravel",
        "sidecar-virus-scan"
    ],
    "homepage": "https://github.com/statix-php/sidecar-virus-scan",
    "license": "MIT",
    "authors": [
        {
            "name": "Wyatt Castaneda",
            "email": "wyatt.castaneda@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.14.0",
        "illuminate/contracts": "^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Statix\\VirusScan\\": "src/",
            "Statix\\VirusScan\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Statix\\VirusScan\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Statix\\VirusScan\\VirusScanServiceProvider"
            ],
            "aliases": {
                "VirusScan": "Statix\\VirusScan\\Facades\\VirusScan"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}